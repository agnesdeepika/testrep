									"parameters": {
										"tableName": {
											"value": "@item().src_table",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "CSVDS",
									"type": "DatasetReference"
								}
							]
						}
					]
				}
			}
